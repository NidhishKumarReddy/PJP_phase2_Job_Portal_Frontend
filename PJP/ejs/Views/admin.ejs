      <!-- <div>
            <a class="nav-link" aria-current="page" href="adminProfile.html">Admin Profile</a>
            <a class="nav-link" href="admin.html">Filter</a>
        </div> -->
    </div>

    <main class="mt-5 pt-3">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <h3 class="display-6">Job Location</h3>
              <div class="input-group mb-3">
                  <select class="form-select" name="Location" id="select2">
                      <option value="Banglore">Banglore</option>
                      <option value="Noida">Noida</option>
                      <option value="Gurgaon">Gurgaon</option>
                      <option value="Delhi">Delhi</option>
                      <option value="Chennai">Chennai</option>
                      <option value="Mumbai">Mumbai</option>
                  </select>
                <button
                  class="btn btn-outline-secondary"
                  type="button"
                  id="btn2"
                >
                  <i class="bi bi-search"></i>
                </button>
              </div>
              <div>
                <div id="output1"></div>
              </div>

              <h3 class="display-6">Work Experience (In Years)</h3>
              <div class="input-group mb-3">
                <input
                  class="form-control"
                  type="number"
                  id="myInput"
                  placeholder="Search by Work Experience"
                  name="years"
                  value="0"
                />
                <button
                  class="btn btn-outline-secondary"
                  type="button"
                  id="btn3"
                >
                  <i class="bi bi-search"></i>
                </button>
              </div>
              <div>
                <div id="output2"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table
                  class="table table-striped table-hover"
                  id="table-sortable"
                >
                  <thead>
                    <tr>
                      <th>First Name <br /></th>
                      <th>Last Name<br /></th>
                      <th>Gender<br /></th>
                      <th>Date of Birth<br /></th>
                      <th>Email<br /></th>
                      <th>Phone<br /></th>
                      <th>Work Experience<br /></th>
                      <th>Job Profile<br /></th>
                      <th>Location<br /></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% user.forEach(u => { %>
                    <tr>
                      <td><%= u.firstName %></td>
                      <td><%= u.lastName %></td>
                      <td><%= u.gender %></td>
                      <td><%= u.dob %></td>
                      <td><%= u.email %></td>
                      <td><%= u.phone %></td>
                      <td><%= u.yoe %></td>
                      <td><%= u.jobProfile %></td>
                      <td><%= u.locationPreference %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
